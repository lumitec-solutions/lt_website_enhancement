<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Compute duration -->
     <record id="ir_cron_add_duration" model="ir.cron">
        <field name="name">Website Visitors: Compute Duration</field>
        <field name="model_id" ref="model_website_visitor"/>
        <field name="state">code</field>
        <field name="code">model.calculate_duration()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">False</field>
    </record>
    <!--Archive website visitors -->
    <record id="ir_cron_archive_bot_visitors" model="ir.cron">
        <field name="name">Website Visitors: Archive visitors if they are bots</field>
        <field name="model_id" ref="model_website_visitor"/>
        <field name="state">code</field>
        <field name="code">model._cron_archive_bots()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
    <!-- Create Sitemap -->
    <record id="ir_cron_sitemap" model="ir.cron">
        <field name="name">Create sitemap</field>
        <field name="model_id" ref="model_website"/>
        <field name="state">code</field>
        <field name="code">model.create_website_sitemap()</field>
        <field name="interval_number">12</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">active</field>
    </record>
</odoo>